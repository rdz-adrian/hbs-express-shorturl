<div class='row justify-content-center mx-0 mt-5'>
  <div class='col-12 col-md-10 col-lg-8'>
    <div class='card shadow'>
      <div class='row'>
        <div
          class='col-12 col-md-5 p-0 pt-4'
          style='background-color: #F1F5FE; position: relative;'
        >
          <h1
            style='position: absolute; font-weight: bold; left: 40px; top:10px'
          >
            Sign in
          </h1>
          <lottie-player
            src='https://assets10.lottiefiles.com/packages/lf20_cmxmy8p4.json'
            background='transparent'
            speed='1'
            style='width: 100%; height: 400px;'
            loop
            autoplay
          ></lottie-player>
        </div>
        <div
          class='col-12 col-md-7 mt-5 mt-md-3 d-flex align-items-center justify-content-center py-4'
        >
          <div class='row justify-content-center w-100'>
            <div class='col-11'>
              <form action='/auth/register' method='post'>
                <input type='hidden' name='_csrf' value='{{csrfToken}}' />
                <div>
                  <label
                    for='email'
                    class='mb-2'
                    style='font-weight: 600;'
                  >Name</label>
                  <div class='position-relative'>
                    <input
                      type='text'
                      name='userName'
                      placeholder='Write your name'
                      class='form-control w-100'
                      style='border-radius: 20px; padding-left: 40px;'
                      value='Adrian RodrÃ­guez Acosta'
                    />
                    <i
                      class='bi bi-person-fill'
                      style='position: absolute; top:7px; left: 15px; color: rgb(110, 108, 108);'
                    ></i>
                  </div>
                  <label
                    for='email'
                    class='mt-3 mb-2'
                    style='font-weight: 600;'
                  >Email</label>
                  <div class='position-relative'>
                    <input
                      type='email'
                      name='email'
                      placeholder='Write your email'
                      class='form-control w-100'
                      style='border-radius: 20px; padding-left: 40px;'
                      value='aracosta2810@gmail.com'
                    />
                    <i
                      class='bi bi-envelope-fill'
                      style='position: absolute; top:7px; left: 15px; color: rgb(110, 108, 108);'
                    ></i>
                  </div>

                </div>
                <div class='mt-3'>
                  <label
                    for='password'
                    style='font-weight: 600;'
                  >Password</label>
                  <div class='position-relative'>
                    <input
                      type='password'
                      name='password'
                      placeholder='Write your password'
                      class='form-control w-100'
                      style='border-radius: 20px; padding-left: 40px;'
                      value='123123'
                    />
                    <i
                      class='bi bi-lock-fill'
                      style='position: absolute; top:5px; left: 15px; color: rgb(110, 108, 108);'
                    ></i>
                  </div>
                  <label
                    class='mt-3'
                    for='password'
                    style='font-weight: 600;'
                  >Repeat password</label>
                  <div class='position-relative'>
                    <input
                      type='password'
                      name='repeatpassword'
                      placeholder='Write your password'
                      class='form-control w-100'
                      style='border-radius: 20px; padding-left: 40px;'
                      value='123123'
                    />
                    <i
                      class='bi bi-lock-fill'
                      style='position: absolute; top:5px; left: 15px; color: rgb(110, 108, 108);'
                    ></i>
                  </div>
                </div>
                <div class='row mt-5'>
                  <div class='col-6'>
                    <button
                      style='font-weight: 800; box-shadow: 6px 6px 10px rgba(0,0,0,0.3); align-items: center'
                      class='btn btn-block border d-flex'
                    >
                      <img
                        src='https://cdn.cdnlogo.com/logos/g/35/google-icon.svg'
                        width='20x'
                        class='mr-2'
                      />
                      Log in with Google
                    </button>
                  </div>
                  <div class='col-6'>
                    <button
                      style='font-weight: 800; box-shadow: 6px 6px 10px rgba(0,0,0,0.3);'
                      class='btn btn-primary h-100 btn-block'
                      type='submit'
                    >
                      Sign in
                    </button>
                  </div>
                  <div class='col-12 mt-5 text-center'>
                    Already have a account?
                    <a href='/auth/login'>Log in</a>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  @import
  url('https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap');
</style>